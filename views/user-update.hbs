{{#if result}}
<div class="card">
    <div class="card-content">
    <div class="card-img">
    <img src="http://127.0.0.1:3000/uploads/{{result.avatar}}">
    </div>
    <p class="card-text">{{result.firstName}}</p>
    <p class="card-text">{{result.lastName}}</p>
    <p class="card-text">{{result.email}}</p>
    </div>

    <div id="app2">
    <h3>Изменить данные пользователя</h3>
    <input type="text" v-model="firstName" name="firstName" placeholder="Name"/>
    <input  type="text" v-model="lastName" name="lastName" placeholder="Фамилия"/>
    <input  type="text" v-model="email" name="email" placeholder="Email"/>
    <input  type="password" v-model="password" name="password" placeholder="Пароль"/>
    <input  type="hidden" ref="token" name="tokenForm" value="{{lastToken result.sessions}}"/>
    <button id="send-data" class="btn" @click.prevent="sendData">Изменить данные</button>
    </div>
    <br>
    <iframe width="0" height="0" border="0" name="dummyframe2" id="dummyframe2"></iframe>
    <form class="upload-form" method="post" enctype="multipart/form-data" target="dummyframe2"
    action="http://127.0.0.1:3000/users/upload-avatar?id={{result.id}}">
    <h3>Изменить аватарку</h3>
    <input type="file" id ="file" name="file"/><br>
    <button type="submit">Загрузить аватарку</button>
    </form>
    </div>
{{else}}
<h1>Данный пользователь отсутствует в базе!</h1>
{{/if}}



